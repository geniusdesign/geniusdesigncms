{% if not logged %}

    <div class="user-login-form">
        <form method="post" action="{{ path('simple_user_login') }}">
            {{ form_widget(form) }}

            <div class="form-navigation">
                <div class="submit-button"> {# contentsubmitButton #}
                    <input type="submit" id="go" name="go" value="Login" />
                </div>
            </div>
        </form>
    </div>

{% else %}

    <div class="user-login-form">
        {% set template = '%s %s (%s) ' %}
        <a class="link warning" href="{{ path('simple_user_logout') }}">Wyloguj</a>
        <span class="link person">{{ template | format(user.getFirstName(), user.getLastName(), user.getEmail()) }}</span>
    </div>
    
{% endif %}