{% extends 'GeniusDesignBackendBundle::layout.html.twig' %}

{% block content %}
    <form method="post" action="{{ path('genius_news_edit', {'newsSlug': news.getTitleSlug(), 'language': language}) }}" {{ form_enctype(form) }}>
        {{ form_widget(form) }}

        {% if isImageVisible and news.getImageFileName() is not empty %}
            <img src="{{ genius_design_file_path('genius_design_components_news', news.getImageFileName(), 'small', true, true) }}" />
        {% endif %}
        
        <div class="form-navigation">
            <div class="submit-button"> {# contentsubmitButton #}
                <input type="submit" id="go" name="go" value="Zapisz" />
            </div>

            <div class="link last">
                <a href="{{ path('genius_news_list') }}">Poka≈º inne &raquo;</a>
            </div>
        </div>
    </form>
    
    {#{ tinymce_init() }#}
{% endblock %}